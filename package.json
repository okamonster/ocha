{
  "name": "turbo-template",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "cspell": "cspell -c ./cspell.json './apps/*/src/**/*' './packages/*/src/**/*'"
  },
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "*",
    "cspell": "^8.6.0",
    "prettier": "^3.2.5",
    "turbo": "latest"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.0.22",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
